<div class="container">
<h1> Add New Author</h1>
<%= form_for :author, url: authors_path do |f| %>
<div class="form-group">
<%= f.label :fname %>
<%= f.text_field :fname, class:'form-control' %><br />
</div>
<div class="form-group">
<%= f.label :lname %>
<%= f.text_field :lname, class:'form-control' %><br />
</div>
<div class="form-group">
<%= f.label :bio %>
<%= f.text_area :bio, class:'form-control' %><br />
</div>
<%= f.submit "Submit", class:'btn btn-primary' %>
<%=link_to "Cancel", authors_path, class:'btn btn-default' %>
<% end %>
</div>